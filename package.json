{
  "name": "budgetapp",
  "version": "1.0.0",
  "description": "backend of budgetapp",
  "engines": {
    "node": "^16.0.0"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "jest --watchAll",
    "coverage": "npm test -- --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/client/**",
      "!**/misc/**",
      "!**/coverage/**"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apexcharts": "^3.10.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.0",
    "crypto": "^1.0.1",
    "csvtojson": "^2.0.10",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.3",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.1.3",
    "express-validator": "^6.2.0",
    "helmet": "^4.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.7",
    "nodemailer": "^6.4.10",
    "ofx": "^0.5.0",
    "react-apexcharts": "^1.3.3",
    "uuid": "^8.0.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^7.6.3",
    "nodemon": "^1.19.4",
    "supertest": "^6.1.6"
  }
}
