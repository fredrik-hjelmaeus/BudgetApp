{
  "name": "budgetapp",
  "version": "1.0.0",
  "description": "backend of budgetapp",
  "engines": {
    "node": "^17.4.0"
  },
  "main": "server.js",
  "scripts": {
    "start": "ls && node dist/server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "dev": "concurrently \"npm run ts\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client && npm run build",
    "test": "jest --watchAll ",
    "coverage": "npm test -- --coverage",
    "ts": "ts-node-dev --poll server.ts",
    "build": "tsc",
    "prod": "node -r ts-node/register/transpile-only -r tsconfig.paths/register ./dist/src/server.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "client"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/client/**",
      "!**/misc/**",
      "!**/coverage/**"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendinblue/client": "^3.1.0",
    "apexcharts": "^3.10.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.7",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.0.1",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.2.0",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.7",
    "nodemailer": "^6.7.2",
    "ofx": "^0.5.0",
    "react-apexcharts": "^1.3.3",
    "sib-api-v3-sdk": "^8.3.0",
    "ts-node-dev": "^1.1.8",
    "uuid": "^8.3.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.41",
    "@types/csvtojson": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.0.0",
    "jest": "^27.4.7",
    "mongodb-memory-server": "^8.2.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
